{
  "name": "jest-handbook-examples",
  "private": true,
  "scripts": {
    "test": "jest src",
    "test:failing": "jest --testRegex '.*\\.failing\\.js' src/*.failing.js",
    "lint": "xo ./src",
    "format": "xo ./src --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "babel-jest": "^25.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "xo": "^0.28.0"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "globals": [
      "expect",
      "beforeEach",
      "test",
      "describe",
      "jest"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "jest": "^25.1.0",
    "sequelize": "^5.21.5"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "babel": {
    "plugins": [
      "babel-plugin-transform-es2015-modules-commonjs"
    ]
  }
}
